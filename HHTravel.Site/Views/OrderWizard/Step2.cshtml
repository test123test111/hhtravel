                }
            }
        </table>
        <p style="clear: both; text-align: right; line-height: 30px; padding-right: 5px;">@Html.ValidationMessage("DelayHotelPostModel.RoomClassPostModels.RoomCount")</p>
        }
        if (Model.GroundServiceModels.Count > 0)
        {
        <p class="dotted_line">
        </p>
        <!--地面附加产品-->
