    </url>*@
    <url>
        <loc>@Model.Dns@Url.Index()</loc>
        <changefreq>weekly</changefreq>
        <priority>1.0</priority>
    </url>
    @*@foreach (var c in Model.DepartureCitys)
    {
    <url>
        <loc>@Model.Dns@Url.Index()</loc>
        <changefreq>weekly</changefreq>
        <priority>1.0</priority>
    </url>
