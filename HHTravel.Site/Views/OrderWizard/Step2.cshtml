                @Html.RadioButtonFor(m => m.FlightSeat, "超经舱")超级经济舱
                @Html.RadioButtonFor(m => m.FlightSeat, "公务舱")公务舱
                @Html.RadioButtonFor(m => m.FlightSeat, "头等舱")头等舱
